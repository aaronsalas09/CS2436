https://www.hackerrank.com/challenges/tree-preorder-traversal/problem

#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
using namespace std;

struct Node{
    int data;
    Node* left;
    Node* right;
    
    Node(int d):data(d), left(nullptr), right(nullptr){}
};

Node* insert(Node* root, int data){
    if(!root) return new Node(data);
    
    if(data < root->data){
        root->left = insert(root->left, data);
    }
    else{
        root->right = insert(root->right, data);
    }
    
    return root;
}

void preOrder(Node* root){
    if(!root) return;
    
    cout << root->data << " ";
    preOrder(root->left);
    preOrder(root->right);
}

int main() {
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */
    int n;
    cin >> n;
    
    Node* root = nullptr;
    
    for(int i = 0;i < n;i++){
        int x;
        cin >> x;
        root = insert(root, x);
        
    }
    
    preOrder(root);
       
    return 0;
}
