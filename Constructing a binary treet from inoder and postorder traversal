https://leetcode.com/problems/construct-binary-tree-from-inorder-and-postorder-traversal/submissions/1842773014/

/**
 * Definition for a binary tree node.
 * struct TreeNode {
 *     int val;
 *     TreeNode *left;
 *     TreeNode *right;
 *     TreeNode() : val(0), left(nullptr), right(nullptr) {}
 *     TreeNode(int x) : val(x), left(nullptr), right(nullptr) {}
 *     TreeNode(int x, TreeNode *left, TreeNode *right) : val(x), left(left), right(right) {}
 * };
 */
class Solution {
public:

    unordered_map<int,int> inIndex;
    int postIdx;

    TreeNode* buildSubtree(int inLeft, int inRight, vector<int>& inorder, vector<int>& postorder){
        //no elements in this inorder range -> empty subtree
        if(inLeft>inRight) return nullptr;
        
        //last unused element in postorder is the root of this subrtree
        int rootVal = postorder[postIdx--];
        TreeNode* root = new TreeNode(rootVal);

        //find root position in inorder
        int idx = inIndex[rootVal];

        //***build right subtree first, then left due to going backwards in post order: left, right, root
        //from the end it's root, right, left
        root->right = buildSubtree(idx+1, inRight, inorder,postorder);
        root->left = buildSubtree(inLeft, idx-1,inorder,postorder);

        return root;


    }


    TreeNode* buildTree(vector<int>& inorder, vector<int>& postorder) {
        int n = inorder.size();

        //fill hashmap for inorder value -> index
        for(int i = 0; i < n;i++){
            inIndex[inorder[i]] = i;
        }

        //start from the last index of postorder
        postIdx = n-1;

        //build the whole tree from inorder range[0, n-1]
        return buildSubtree(0,n-1,inorder,postorder);
    }
};
