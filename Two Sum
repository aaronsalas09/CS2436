//This was a leetcode Two Sum Problem.
//https://leetcode.com/problems/two-sum/description/

class Solution {
public:
    vector<int> twoSum(vector<int>& nums, int target) {
        int n = nums.size();

        for(int i = 0; i < n;i++){
            for(int j = i +1; j < n;j++){
                if(nums[i] + nums[j] == target){
                    return {i, j};               //shorthand to initialize i and j with the index of the numbers that make up the sum.
                }
            }
        }

        return{};
    }
};
